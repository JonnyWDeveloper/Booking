@model Booking.Core.Entities.GymClass

@{
    ViewData["Title"] = "Details";
}

<br />
<h1>Gym Class</h1>
<h3>Booked single session</h3>
<br />

<table class="table">
    <thead>
        <tr>
            <th>Bookable&nbsp;&nbsp;&nbsp;<span style="font-size:.5rem;" class="bg-success bg-opacity-25">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span></th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Duration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody id="gymclasses">
        <partial name="GymClassPartialDetails" />
    </tbody>
</table>


<div class="row">
    <h5>Booked by members:</h5>

    @foreach (var member in ViewData["AttendeeEMailList"] as List<ApplicationUser>)
    {
        if (member != null)
        {
            <p>Email: <span class="text-primary fw-bolder"> @member.Email </span></p>
            <p>Username: @member.UserName</p>
            <p>Id: @member.Id</p>
            @*       <p>Concurrency stamp: @member.ConcurrencyStamp</p>
    <p>Security stamp: @member.SecurityStamp</p>
    <p>Password hash: @member.PasswordHash</p>*@
        }
        <hr />
    }
</div>

<div>
    @*<a asp-action="Edit" asp-route-id="@Model.GetEnumerator().Current.Id">Edit</a> *@
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
